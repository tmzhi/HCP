<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape android:shape="rectangle" >
            <size android:height="1dp" />

            <solid android:color="#ffff0000" />
        </shape>
    </item>
    <item>
        <shape
            android:dither="true"
