<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape >
            <gradient 
                android:startColor="#66CD00"
                android:endColor="#458B74"
                android:angle="90"
                />
            <corners android:radius="4dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <gradient 
                android:startColor="#66CD00"
                android:endColor="#458B74"
                android:angle="90"
                />
            <corners android:radius="4dp"
                />
        </shape>
    </item>
    <item >
        <shape >
            <gradient 
                android:startColor="#008B45"
                android:endColor="#00CD66"
                android:angle="90"
                />
            <corners android:radius="4dp"
                />
            <padding android:left="4dp"
                android:right="4dp"
                android:top="8dp"
                android:bottom="8dp"
                />
        </shape>
    </item>
</selector>