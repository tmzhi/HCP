<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list >
            <item android:top="3dp" android:left="3dp">
        <shape >
            <gradient 
                android:startColor="#66000000"
                android:endColor="#66000000"
                />
            <corners 
                android:radius="3dp"
                />
            <padding 
                android:right="3dp"
                android:bottom="3dp"
                />
        </shape>
        </item>
        <item android:bottom="2dp" android:right="2dp">
        <shape >
            <gradient 
                android:startColor="#ff58bb52"
                android:endColor="#ff58bb52"
                />
            <corners 
                android:radius="3dp"
                />
            <padding android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                />
        </shape>
        </item>
        </layer-list>
    </item>
</selector>
