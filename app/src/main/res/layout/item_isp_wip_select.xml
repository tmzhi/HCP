<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_item_isp_wip_select_wip"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_item_isp_wip_select_component"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_item_isp_wip_select_component_name"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_item_isp_wip_select_wip_type"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_item_isp_wip_select_wip_status"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_item_isp_wip_select_project_no"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>