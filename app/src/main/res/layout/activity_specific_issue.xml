<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_ori"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_wo_title"
        android:padding="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/si_title"
        android:textSize="24sp"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        >
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_sub_inventory"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_si_sub_inventory"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_wip_name"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_si_wip_name"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_class_code"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_class_code"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_start_time"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_start_time"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_completion_time"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_completion_time"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_component_code"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_si_component_code"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_component_name"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_component_name"
                />
        </LinearLayout>
        
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_remaining_qty"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_remaining_qty"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_locator"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_locator"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style3"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/si_transaction_qty"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_si_transaction_qty"
                />
        </LinearLayout>
    </LinearLayout>
        <View 
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="1dp"
        />
    <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_query_style"
            android:textColor="@drawable/btn_query_textcolor_style"
            android:id="@+id/btn_si_submit"
            android:text="提交"
            android:layout_margin="6dp"
            />
</LinearLayout>
