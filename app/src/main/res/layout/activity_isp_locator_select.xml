<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan900"
        android:text="@string/isp_locator_select_title"
        android:textSize="20sp"
        android:textColor="#fff"
        android:padding="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            style="@style/ISP_Query_Input_Style2"
            android:id="@+id/edt_isp_locator_select_subinventory"
            android:hint="@string/isp_locator_select_subinventory"
            />
        <EditText
            style="@style/ISP_Query_Input_Style2"
            android:id="@+id/edt_isp_locator_select_queue"
            android:hint="@string/isp_locator_select_queue"
            android:layout_marginLeft="4dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/cyan800"
        >
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/isp_locator_select_subinventory"
    android:textSize="16sp"
    android:gravity="center_horizontal"
    android:textColor="@color/white"
    />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/isp_locator_select_queue"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="@string/isp_locator_select_description"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/lv_isp_locator_select_list"
        android:listSelector="@color/float_transparent"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/cyan800"
            android:textColor="@color/white"
            android:text="@string/isp_locator_select_confirm"
            android:id="@+id/btn_isp_locator_select_confirm"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/cyan800"
            android:text="@string/isp_locator_select_query"
            android:id="@+id/btn_isp_locator_select_refresh"
            />
    </LinearLayout>
</LinearLayout>
