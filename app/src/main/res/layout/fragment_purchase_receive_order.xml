<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ori"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_order"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_order"
                    android:layout_marginLeft="4dp"
                    />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_marginLeft="1dp"
                    android:background="@null"
                    android:src="@drawable/img_isp_query"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/imb_intraware_purchase_receive_order_query"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_line"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_line"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_component"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_component"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_component_description"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_component_description"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_shipment"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_shipment"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_shipment_line"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_shipment_line"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_uom"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_uom"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_lotno"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_lotno"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_project_no"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_project_no"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_barcode"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_barcode"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_receive_quantity"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:id="@+id/edt_intraware_purchase_receive_receive_quantity"
                    android:layout_marginLeft="4dp"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>
            <LinearLayout
            style="@style/Wo_Container_Style"
            >
            <TextView
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/intraware_purchase_receive_purchase_quantity"
                />
            <EditText
                style="@style/Wo_Input_Style"
                android:inputType="numberDecimal"
                android:id="@+id/edt_intraware_purchase_receive_purchase_quantity"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>
            <LinearLayout
                style="@style/Wo_Container_Style"
                >
                <TextView
                    style="@style/Wo_Original_Tag_Style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/intraware_purchase_receive_received_quantity"
                    />
                <EditText
                    style="@style/Wo_Input_Style"
                    android:inputType="numberDecimal"
                    android:id="@+id/edt_intraware_purchase_receive_received_quantity"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>