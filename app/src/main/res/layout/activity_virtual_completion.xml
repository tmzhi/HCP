<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_ori"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_wo_title"
        android:padding="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vc_title"
        android:textSize="24sp"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        />
    <ImageButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_centerVertical="true"
        android:id="@+id/imb_vc_query"
        />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        >
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_sub_inventory"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_vc_sub_inventory"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_wip_entity_from"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_vc_wip_entity_from"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_class_code_from"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_class_code_from"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_start_time_from"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_start_time_from"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_completion_time_from"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_completion_time_from"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_segment"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_segment"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_wip_entity_to"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_vc_wip_entity_to"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_class_code_to"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_class_code_to"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_start_time_to"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_start_time_to"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_completion_time_to"
                />
            <TextView 
                style="@style/Wo_Value_Style"
                android:id="@+id/tv_vc_completion_time_to"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/Wo_Container_Style1"
            >
            <TextView 
                style="@style/Wo_Original_Tag_Style"
                android:layout_gravity="center_vertical"
                android:text="@string/vc_transaction_quantity"
                />
            <EditText 
                style="@style/Wo_Input_Style"
                android:id="@+id/edt_vc_transaction_quantity"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        />
    </LinearLayout>
    <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_query_style"
            android:textColor="@drawable/btn_query_textcolor_style"
            android:id="@+id/btn_vc_submit"
            android:text="提交"
            android:layout_margin="6dp"
            />
</LinearLayout>
